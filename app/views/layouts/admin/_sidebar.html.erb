<div class="sidebar">
	<div class="wrapper">

		<%= link_to image_tag("logo.png", alt: "Q-Meeting Logo"), root_path, class: "logo" %>

		<ul class="nav  nav-list">

			<!-- sidebar input search box -->
			<li class="nav-search">
				<div class="form-group">
					<input type="text" class="form-control nav-search" placeholder="Search through site" />
					<span class="input-icon fui-search"></span>
				</div>
			</li>

			<li class="nav-header">Home</li>

			<li class="<%= nav_class("user/dashboard") %>">
				<%= link_to raw("<i class=\"fa fa-dashboard\"></i> Dashboard"), user_dashboard_path %>
