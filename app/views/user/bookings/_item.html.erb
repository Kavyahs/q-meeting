<%# describes about each booking %>
<div class="web-stats info clearfix" style="margin-bottom:5px;padding:5px;height:auto;">

    <div class="visible-md visible-lg pull-left mr-10" style="width:15%;">
      <%= display_image(booking, :picture, {width: "50px"}) %>
    </div>
    <div class="pull-left" style="width:80%;">
      <%= link_to booking.title, user_booking_path(booking), :remote=>true, :class=>"text-color-blue fs-14" %>
      <div class="text-color-gray fs-12"> <%= scrap_word(booking.description, 120) %></div>
    </div>

</div>


