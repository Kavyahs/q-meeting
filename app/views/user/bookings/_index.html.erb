
<%# Displays list of @bookings %>
<div id="div_booking_collections">
	<% @bookings.each do |booking| %>
		<div id="div_booking_<%= booking.id %>">
			<%= render :partial=>"item", :locals=>{:booking=>booking} %>
		</div>
	<% end %>
	<% if @bookings.blank? %>
		<div id="div_booking_empty" class="box text-color-grey p-80 text-align-center" style="height:200px;">
      <%= translate("forms.no_results_found") %>
		</div>
	<% end %>
</div>
<div class="cl"></div>

<% if @bookings.any? %>
   <%= content_tag :div, :class=>"pull-right" do %>
     <%= paginate @bookings, :remote => true %>
   <% end %>
<% end %>
<div class="cl"></div>
