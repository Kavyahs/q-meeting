  <%# Displays a detailed view of the booking %>
  <%# Display Flash Message if any only in case of ajax request %>
  <% if request.xhr? %>
  <%= render :partial=>"layouts/common/flash_message" %>
  <% end %>
  <div class="panel panel-profile">
    <div class="panel-body" style="height:auto;">
      <div class="basic-profile" style="height:auto;padding:10px;">
        <div class="row">
          <div class="col-sm-3">
            <%= link_to display_image(@booking, :picture),
            upload_image_link(@booking, user_booking_path(@booking), :picture),
            :remote => true %>
          </div>
          <div class="col-sm-9">
            <div class="mb-20 text-color-gray">
              <div class="fs-22 text-color-blue pull-left">
                <%= @booking.title %>
              </div>
              <div class="cl"></div>
              <div class="fs-14 text-color-gray"><%= @booking.description %></div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
  <% if @current_user.is_super_admin? %>
  <%= render :partial => "widgets/more_details", :locals=>{
    :data_model => @booking,
    :data_columns => [:id, :created_at, :updated_at],
    :heading => "Technical Details",
    :display_footer => true,
    :edit_link => edit_user_booking_path(@booking),
    :delete_link => user_booking_path(@booking)} %>
    <% end %>