<div class="btn-group mt-10 mb-10" style="width:100%;">
  <button type="button" class="btn btn-default btn-block dropdown-toggle" data-toggle="dropdown">
    Choose a Booking <span class="caret"></span>
  </button>
  <ul class="dropdown-menu" role="menu">
    <% @bookings.each do |booking| %>
      <li><%= link_to booking.title, user_booking_path(booking), :remote=>true %></li>
    <% end %>
    <%= content_tag :li, link_to_next_page(@bookings, 'Next Page', :remote => true) %>
    <%= content_tag :li, link_to_previous_page(@bookings, 'Previous Page', :remote => true) %>
  </ul>
</div>